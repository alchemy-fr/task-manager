{
    "name": "alchemy/task-manager",
    "type": "library",
    "description": "A manager for running parallel PHP processes command line.",
    "keywords": ["process", "cli", "parallel"],
    "license": "MIT",
    "authors": [
        {
            "name": "Romain Neutron",
            "email": "imprec@gmail.com",
            "homepage": "http://www.lickmychip.com/"
        },
        {
            "name": "Phraseanet Team",
            "email": "info@alchemy.fr",
            "homepage": "http://www.phraseanet.com/"
        }
    ],
    "require": {
        "php": "~7.0",
        "ext-zmq": "*",

        "neutron/process-manager": "2.0.x-dev@dev",
        "neutron/signal-handler": "~1.0",
        "symfony/event-dispatcher": "~2.0",
        "symfony/process": "~2.4"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/romainneutron/ProcessManager"
        }
    ],
    "require-dev": {
        "monolog/monolog": "~1.0",
        "phpunit/phpunit": "~6.0",
        "symfony/console": "~2.3",
        "symfony/finder": "~2.1"
    },
    "autoload": {
        "psr-0": {
            "Alchemy": "src"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    }
}
